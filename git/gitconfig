[user]
	name = Wesley Ellis
	email = tahnok@gmail.com
[core]
	excludesfile = /home/wes/.gitignore
	ui = on
	pager = delta # delta
	#fsmonitor = true
[interactive] # delta
	diffFilter = delta --color-only
[delta]
	navigate = true
[diff]
	colorMoved = default
[alias]
	co = checkout
	st = status
	dc = diff --cached
	d = diff
	cm = checkout main
	p = pull
	cb = checkout -b
	wip = !git add --all && git commit -m \"WIP\" --no-verify
	b = branch
	undo = reset HEAD~
	rh = reset --hard HEAD
	oops = !git add --all && git commit --amend --reuse-message=HEAD
	c = commit -m
	aa = add --all
	fp = push --force-with-lease
[rebase]
	autosquash = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[merge]
	conflictstyle = diff3
[pull]
	ff = only
[init]
	defaultBranch = main
[branch]
	autoSetupMerge = simple
[push]
	autoSetupRemote = true
[commit]
	verbose = true
